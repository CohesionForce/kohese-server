{
  "id": "Task",
  "name": "Task",
  "parentId": "Item",
  "base": "Item",
  "idInjection": true,
  "invertItemOrder": true,
  "properties": {
    "taskState": {
      "type": "StateMachine",
      "required": true,
      "default": "Proposed",
      "properties": {
        "state": {
          "Proposed": {
            "name": "Proposed",
            "description": "A task that is Proposed."
          },
          "Assigned": {
            "name": "Assigned",
            "description": "A task that is Assigned."
          },
          "Accepted": {
            "name": "Accepted",
            "description": ""
          },
          "InWork": {
            "name": "In Work",
            "description": "A task that is In Work."
          },
          "PendingReassign": {
            "name": "Pending Reassign",
            "description": "A task that is Pending Reassign."
          },
          "Completed": {
            "name": "Completed",
            "description": "A task that is Completed."
          }
        },
        "transition": {
          "Assign": {
            "source": "Proposed",
            "target": "Assigned",
            "guard": {},
            "requires": [
              "assignment:Assignee"
            ]
          },
          "Accept": {
            "source": "Assigned",
            "target": "Accepted",
            "guard": {}
          },
          "Request Reassign After Accepted": {
            "source": "Accepted",
            "target": "PendingReassign",
            "guard": {}
          },
          "Begin Work": {
            "source": "Accepted",
            "target": "InWork",
            "guard": {},
            "requires": ""
          },
          "Request Reassign": {
            "source": "Assigned",
            "target": "PendingReassign",
            "guard": {}
          },
          "Reassign": {
            "source": "PendingReassign",
            "target": "Assigned",
            "guard": {},
            "requires": []
          },
          "Complete": {
            "source": "InWork",
            "target": "Completed",
            "guard": {},
            "requires": []
          }
        }
      }
    },
    "predecessors": {
      "type": [
        "Item"
      ],
      "relation": {
        "kind": "Item",
        "foreignKey": "id"
      }
    },
    "assignedTo": {
      "type": "string",
      "relation": {
        "kind": "KoheseUser",
        "foreignKey": "username"
      }
    },
    "estimatedStart": {
      "type": "number"
    },
    "estimatedCompletion": {
      "type": "number"
    },
    "estimatedHoursEffort": {
      "type": "number"
    },
    "actualStart": {
      "type": "number"
    },
    "actualCompletion": {
      "type": "number"
    },
    "remainingHoursEffort": {
      "type": "number"
    },
    "actualHoursEffort": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": []
}
