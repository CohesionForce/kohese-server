{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "baseUrl": ".",
    "paths": {
      "common" : ["./common/models/"]
    },
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "types": [
      "socket.io",
      "socket.io-client",
      "node",
      "webpack",
      "underscore",
      "jasmine",
      "jssha",
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2016",
      "es2017",
      "es2020",
      "dom"
    ]
  },
  "exclude": [
    "scripts",
    "server",
    "node_modules",
    "dist",
    "build"
  ]
}
